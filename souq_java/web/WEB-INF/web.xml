<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>NotLoginFilter</filter-name>
        <filter-class>com.java.NotLoginFilter</filter-class>
    </filter>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.java.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <!--        <url-pattern>/L*</url-pattern>
        <url-pattern>/login.html</url-pattern>
        <url-pattern>/RForm*</url-pattern>-->
        <url-pattern>/login/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>NotLoginFilter</filter-name>
        <url-pattern>/notlogin/*</url-pattern>
        <!--<url-pattern>/listOfUsers.jsp</url-pattern>-->
    </filter-mapping>
    <listener>
        <description>ServletContextListener, HttpSessionListener</description>
        <listener-class>com.java.InitListener</listener-class>
    </listener>
    <!--    <servlet>
        <servlet-name>notlogin</servlet-name>
        <jsp-file>/notlogin/listOfUsers.jsp</jsp-file>
    </servlet>-->
    <servlet>
        <servlet-name>GenerateDumyCookies</servlet-name>
        <servlet-class>com.java.GenerateDumyCookies</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckCookiesEnabled</servlet-name>
        <servlet-class>com.java.CheckCookiesEnabled</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AlreadyLogin</servlet-name>
        <servlet-class>com.java.AlreadyLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>listOfUsers</servlet-name>
        <servlet-class>com.java.listOfUsers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogOut</servlet-name>
        <servlet-class>com.java.LogOut</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GenerateDumyCookies</servlet-name>
        <url-pattern>/GenerateDumyCookies</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Insertproducts</servlet-name>
        <servlet-class>com.java.Insertproducts</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Insertproducts</servlet-name>
        <url-pattern>/Insertproducts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckCookiesEnabled</servlet-name>
        <url-pattern>/CheckCookiesEnabled</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AlreadyLogin</servlet-name>
        <url-pattern>/notlogin/AlreadyLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>listOfUsers</servlet-name>
        <url-pattern>/notlogin/listOfUsers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogOut</servlet-name>
        <url-pattern>/notlogin/LogOut</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Updayeproducts</servlet-name>
        <servlet-class>com.java.Updayeproducts</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Updayeproducts</servlet-name>
        <url-pattern>/Updayeproducts</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
